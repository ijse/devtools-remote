{
  "name": "Remote DevTools",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Debug your user's browser remotely via Chrome DevTools.",
  "homepage_url": "https://www.ijser.cn",
  "browser_action": {
      "default_icon": "icons/icon128.png",
      "default_title": "Remote DevTools"
   },
  "background": {
    "page": "background.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "permissions": [
    "tabs",
    "activeTab",
    "debugger",
    "desktopCapture",
    "pageCapture",
    "tabCapture",
    "clipboardWrite",
    "<all_urls>"
  ]
}
